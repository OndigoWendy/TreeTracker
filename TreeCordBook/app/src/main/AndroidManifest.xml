<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moringaschool.treecordbook">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/img"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".trees.data.UserAccountActivity"
            android:exported="true" />
        <activity
            android:name=".trees.data.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".trees.HomeActivity"
            android:exported="true"
            android:label="PLant Tracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".trees.EditorActivity"
            android:label="@string/editor_activity_title_new_pet"
            android:parentActivityName=".trees.CatalogActivity"
            android:theme="@style/EditorTheme">
            " >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moringaschool.treecordbook.trees.HomeActivity" />
        </activity>
        <activity android:name=".trees.CitySearch" />
        <activity android:name=".trees.MainActivity" />
        <activity android:name=".trees.CatalogActivity" />

        <provider
            android:name=".trees.data.PlantsProvider"
            android:authorities="com.example.android.pets"
            android:exported="false" />
    </application>

</manifest>